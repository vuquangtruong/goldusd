@model GoldUSD.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="@Url.Content("~/Content/css/qc.css")" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/css/validation.css")" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.0.3.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <style type="text/css">
        <!--
        .sinput {	font-family: Verdana, Arial, Helvetica, sans-serif;
            font-size: 10px;
        }
    </style>
</head>
<body>
    <form id="frmvntlogin" name="frmvntlogin" method="post" action="vnt.php">
    </form>
    <br />
    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
    {
        <table width="356" height="179" border="0" align="center" cellpadding="0" cellspacing="0"
               background="@Url.Content("~/Content/images/vntlogin.jpg")">
            <tr>
                <td width="10">
                    &nbsp;
                </td>
                <td colspan="3">
                    &nbsp;
                </td>
                <td width="14">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td height="34">
                    &nbsp;
                </td>
                <td colspan="3" align="center">
                    <p class="titletext2">
                        ĐĂNG NHẬP</p>
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td rowspan="2">
                    &nbsp;
                </td>
                <td width="129" height="28" align="right">
                    <span class="contenttextb">Tên đăng nhập :</span>
                </td>
                <td width="10" align="left">
                    &nbsp;
                </td>
                <td width="193" align="left">
                    @Html.TextBoxFor(m => m.Username, new { name = "txtuserid", id = "txtuserid" })
                </td>
                <td rowspan="2">
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td height="26" align="right" class="contenttextb">
                    Mật khẩu :
                </td>
                <td align="left">
                    &nbsp;
                </td>
                <td align="left">
                    @Html.PasswordFor(m => m.Password, new { name = "txtpwd", id = "txtpwd" })
                </td>
            </tr>
            <tr>
                <td height="5">
                </td>
                <td align="center" valign="top">
                </td>
                <td align="center" valign="top">
                </td>
                <td align="left" valign="top">
                </td>
                <td>
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
                <td align="center" valign="top">
                    &nbsp;
                </td>
                <td align="center" valign="top">
                    &nbsp;
                </td>
                <td align="left" valign="top">
                    <input type="submit" name="Submit2" value="      OK      " />
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
                <td colspan="3">
                    &nbsp;
                </td>
                <td>
                    &nbsp;
                </td>
            </tr>
        </table>
        @Html.ValidationSummary()
    }
</body>
</html>
